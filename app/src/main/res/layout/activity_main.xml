<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <de.fklappan.android.util.expandablecardview.ExpandableCardView
        android:id="@+id/expandableCard1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:headerText="@string/header_one"
        style="@style/ExpandableCardView"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/custom_layout"/>

        </LinearLayout>

    </de.fklappan.android.util.expandablecardview.ExpandableCardView>

    <de.fklappan.android.util.expandablecardview.ExpandableCardView
        android:id="@+id/expandableCard2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expandableCard1"
        app:headerText="@string/header_two"
        style="@style/ExpandableCardView"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/custom_layout"/>


    </de.fklappan.android.util.expandablecardview.ExpandableCardView>

</androidx.constraintlayout.widget.ConstraintLayout>